{
  "name": "@kancha/kancha",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "develop": "tsc -p ./tsconfig.build.json --watch",
    "start": "yarn build && node node_modules/react-native/local-cli/cli.js start",
    "xcode": "open demo/ios/KanchaSink.xcodeproj",
    "test": "jest --verbose --coverage",
    "test:ios:release": "detox build -c ios.sim.release && detox test -c ios.sim.release --cleanup",
    "test:ios:debug": "detox build -c ios.sim.debug && detox test -c ios.sim.debug",
    "format": "prettier",
    "docs": "typedoc --out ./docs/documentation ./src --mode file --tsconfig ./tsconfig.json --name 'Kancha Documentation' --theme minimal"
  },
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@callstack/react-theme-provider": "^3.0.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/runtime": "^7.4.5",
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/hoist-non-react-statics": "^3.3.1",
    "@types/jest": "^24.0.13",
    "@types/react": "^16.8.19",
    "@types/react-native": "^0.57.60",
    "@types/react-test-renderer": "^16.8.1",
    "babel-jest": "^24.8.0",
    "detox": "^12.11.0",
    "hoist-non-react-statics": "^3.3.0",
    "husky": "^2.3.0",
    "jest": "^24.8.0",
    "metro-react-native-babel-preset": "^0.54.1",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "react": "16.8.3",
    "react-native": "0.59.8",
    "react-native-testing-library": "^1.8.0",
    "react-native-typescript-transformer": "1.2.12",
    "react-test-renderer": "16.8.3",
    "ts-jest": "^24.0.2",
    "tslint": "^5.17.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^4.0.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/dist/",
      "<rootDir>/demo"
    ],
    "moduleNameMapper": {
      "@kancha/kancha": "<rootDir>/src/index",
      "@types": [
        "<rootDir>/src/@types"
      ],
      "@components/*": [
        "<rootDir>/src/components/*"
      ],
      "@theme/*": [
        "<rootDir>/src/theming/*"
      ],
      "@constants/*": [
        "<rootDir>/src/constants/*"
      ],
      "@utils/*": [
        "<rootDir>/src/utils/*"
      ]
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/demo"
    ]
  },
  "detox": {
    "test-runner": "jest",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/KanchaSink.app",
        "build": "xcodebuild -project demo/ios/KanchaSink.xcodeproj -scheme KanchaSink -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build -UseModernBuildSystem=NO",
        "type": "ios.simulator",
        "name": "iPhone 8"
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/KanchaSink.app",
        "build": "xcodebuild -project demo/ios/KanchaSink.xcodeproj -scheme KanchaSink -configuration Release -sdk iphonesimulator -derivedDataPath ios/build -UseModernBuildSystem=NO",
        "type": "ios.simulator",
        "name": "iPhone X"
      }
    }
  }
}
