{
  "extends": "./tsconfig-strict.json",
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "declaration": true,
    "jsx": "react",
    "lib": ["es7"],
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": { "kancha": ["./src"] }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "demo", "dist", "src/**/*.test.*"]
}
