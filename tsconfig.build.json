{
  "extends": "./tsconfig-strict.json",
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "declaration": true,
    "jsx": "react",
    "lib": ["es7"],
    "moduleResolution": "node",
    "strict": true,
    "target": "esnext",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@kancha/kancha": ["./src"],
      "@types": ["./src/@types"],
      "@components/*": ["./src/components/*"],
      "@theme/*": ["./src/theming/*"],
      "@constants/*": ["./src/constants/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "demo",
    "./dist",
    "src/**/*.test.*"
  ]
}
